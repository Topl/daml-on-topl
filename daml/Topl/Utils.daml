module Topl.Utils where

data SendStatus = New
                | Pending
                | Sent with
                    when   : Time
                    from   : Text
                    txHash : Optional Text
                | FailedToSend with
                    reason : Text
                | Confirmed with
                  txId  : Text
                  depth : Int
  deriving (Eq, Show)


data AssetCode =  AssetCode with 
    version : Int
    shortName : Text
  deriving (Eq, Show)

