module Topl.Onboarding where

  import Topl.Wallet

  template WalletCreationRequest with
    owner : Party
    operator : Party
      where 
        signatory owner

        observer operator

        choice WalletCreationRequest_Accept : ContractId VaultState with
          controller operator
          do
            create VaultState with
              currentPartyIndex = 0
              currentContractIndex = 0
              ..